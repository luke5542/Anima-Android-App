<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AnimaHome$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/section_label"
        android:layout_toRightOf="@+id/section_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_skill_value"
        android:layout_below="@+id/spinner"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skill_value"
        android:textSize="22sp"
        android:id="@+id/tv_skill_value"
        android:layout_alignBottom="@+id/et_skill_value"
        android:layout_toLeftOf="@+id/et_skill_value" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_roll_value"
        android:layout_below="@+id/et_skill_value"
        android:layout_alignRight="@+id/et_skill_value"
        android:layout_alignEnd="@+id/et_skill_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roll_value"
        android:textSize="22sp"
        android:id="@+id/tv_roll_value"
        android:layout_alignBottom="@+id/et_roll_value"
        android:layout_toLeftOf="@+id/et_skill_value" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_color_value"
        android:layout_below="@+id/et_roll_value"
        android:layout_alignRight="@+id/et_roll_value"
        android:layout_alignEnd="@+id/et_roll_value"
        android:layout_alignLeft="@+id/et_roll_value"
        android:layout_alignStart="@+id/et_roll_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_value"
        android:textSize="22sp"
        android:id="@+id/tv_color_value"
        android:layout_alignBottom="@+id/et_color_value"
        android:layout_alignRight="@+id/tv_roll_value"
        android:layout_alignEnd="@+id/tv_roll_value" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_generate"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
